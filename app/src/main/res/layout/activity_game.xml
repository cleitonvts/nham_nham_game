<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GameActivity"
    android:background="@color/black">

    <ImageView
        android:id="@+id/textTop"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/first_medium_player_1"
        android:src="@drawable/nham_nham_icon"
        />
    <ImageButton
        android:id="@+id/new_game_button"
        android:layout_width="130dp"
        android:layout_height="35dp"
        android:layout_marginEnd="50dp"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/textTop"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/new_game_btn_foreground"
        android:background="@drawable/btn_bord_background_black"
        />
    <ImageButton
        android:id="@+id/intructions_button"
        android:layout_width="130dp"
        android:layout_height="35dp"
        android:layout_marginEnd="50dp"
        app:layout_constraintTop_toBottomOf="@id/new_game_button"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/instructions_btn_foreground"
        android:background="@drawable/btn_bord_background_black"
        android:layout_marginTop="17dp"
        />

    <ImageButton
        android:id="@+id/return_button"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/btn_return_foreground"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"

        />

    <ImageButton
        android:id="@+id/first_small_player_1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textTop"
        android:src="@drawable/icon_charmander"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
    />
    <ImageButton
        android:id="@+id/second_small_player_1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/first_small_player_1"
        android:src="@drawable/icon_charmander"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        />
    <ImageButton
        android:id="@+id/third_small_player_1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/second_small_player_1"
        android:src="@drawable/icon_charmander"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        />
    <ImageButton
        android:id="@+id/first_medium_player_1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintStart_toEndOf="@id/first_small_player_1"
        app:layout_constraintTop_toBottomOf="@+id/textTop"
        android:src="@drawable/icon_charmeleon"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        />
    <ImageButton
        android:id="@+id/second_medium_player_1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintStart_toEndOf="@id/second_small_player_1"
        app:layout_constraintTop_toBottomOf="@+id/first_medium_player_1"
        android:src="@drawable/icon_charmeleon"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        />
    <ImageButton
        android:id="@+id/third_medium_player_1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintStart_toEndOf="@id/third_small_player_1"
        app:layout_constraintTop_toBottomOf="@+id/second_medium_player_1"
        android:src="@drawable/icon_charmeleon"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        />
    <ImageButton
        android:id="@+id/first_big_player_1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintStart_toEndOf="@id/first_medium_player_1"
        app:layout_constraintTop_toBottomOf="@+id/textTop"
        android:src="@drawable/icon_charizard"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        />
    <ImageButton
        android:id="@+id/second_big_player_1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintStart_toEndOf="@id/second_medium_player_1"
        app:layout_constraintTop_toBottomOf="@+id/first_big_player_1"
        android:src="@drawable/icon_charizard"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        />
    <ImageButton
        android:id="@+id/third_big_player_1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintStart_toEndOf="@id/third_medium_player_1"
        app:layout_constraintTop_toBottomOf="@+id/second_big_player_1"
        android:src="@drawable/icon_charizard"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        />
    <ImageButton
        android:id="@+id/bord_space_0"
        android:layout_width="85dp"
        android:layout_height="85dp"
        app:layout_constraintTop_toBottomOf="@id/third_big_player_1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/bord_space_1"
        app:layout_constraintBottom_toTopOf="@id/bord_space_3"
        android:layout_marginTop="25dp"
        android:scaleType="fitCenter"
        android:padding="10dp"
        android:src="@android:color/transparent"
        android:background="@drawable/black_bord_xml"
        app:layout_constraintHorizontal_chainStyle="packed"
        />
    <ImageButton
        android:id="@+id/bord_space_1"
        android:layout_width="85dp"
        android:layout_height="85dp"
        app:layout_constraintTop_toBottomOf="@id/third_big_player_1"
        app:layout_constraintStart_toEndOf="@id/bord_space_0"
        app:layout_constraintEnd_toStartOf="@+id/bord_space_2"
        app:layout_constraintBottom_toTopOf="@id/bord_space_4"
        android:layout_marginTop="25dp"
        android:scaleType="fitCenter"
        android:padding="10dp"
        android:src="@android:color/transparent"
        android:background="@drawable/white_bord_xml"

        />
    <ImageButton
        android:id="@+id/bord_space_2"
        android:layout_width="85dp"
        android:layout_height="85dp"
        app:layout_constraintTop_toBottomOf="@id/third_big_player_1"
        app:layout_constraintStart_toEndOf="@id/bord_space_1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bord_space_5"
        android:layout_marginTop="25dp"
        android:scaleType="fitCenter"
        android:padding="10dp"
        android:src="@android:color/transparent"
        android:background="@drawable/black_bord_xml"
        />
    <ImageButton
        android:id="@+id/bord_space_3"
        android:layout_width="85dp"
        android:layout_height="85dp"
        app:layout_constraintTop_toBottomOf="@id/bord_space_0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/bord_space_4"
        app:layout_constraintBottom_toTopOf="@id/bord_space_6"
        android:scaleType="fitCenter"
        android:padding="10dp"
        android:src="@android:color/transparent"
        android:background="@drawable/white_bord_xml"
        app:layout_constraintHorizontal_chainStyle="packed"
        />
    <ImageButton
        android:id="@+id/bord_space_4"
        android:layout_width="85dp"
        android:layout_height="85dp"
        app:layout_constraintTop_toBottomOf="@id/bord_space_1"
        app:layout_constraintStart_toEndOf="@id/bord_space_3"
        app:layout_constraintEnd_toStartOf="@+id/bord_space_5"
        app:layout_constraintBottom_toTopOf="@id/bord_space_7"
        android:scaleType="fitCenter"
        android:padding="10dp"
        android:src="@android:color/transparent"
        android:background="@drawable/black_bord_xml"
        />
    <ImageButton
        android:id="@+id/bord_space_5"
        android:layout_width="85dp"
        android:layout_height="85dp"
        app:layout_constraintTop_toBottomOf="@id/bord_space_2"
        app:layout_constraintStart_toEndOf="@id/bord_space_4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bord_space_8"
        android:scaleType="fitCenter"
        android:padding="10dp"
        android:src="@android:color/transparent"
        android:background="@drawable/white_bord_xml"
        />
    <ImageButton
        android:id="@+id/bord_space_6"
        android:layout_width="85dp"
        android:layout_height="85dp"
        app:layout_constraintTop_toBottomOf="@id/bord_space_3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/bord_space_7"
        android:scaleType="fitCenter"
        android:padding="10dp"
        android:src="@android:color/transparent"
        android:background="@drawable/black_bord_xml"
        app:layout_constraintHorizontal_chainStyle="packed"
        />
    <ImageButton
        android:id="@+id/bord_space_7"
        android:layout_width="85dp"
        android:layout_height="85dp"
        app:layout_constraintTop_toBottomOf="@id/bord_space_4"
        app:layout_constraintStart_toEndOf="@id/bord_space_6"
        app:layout_constraintEnd_toStartOf="@+id/bord_space_8"
        android:scaleType="fitCenter"
        android:padding="10dp"
        android:src="@android:color/transparent"
        android:background="@drawable/white_bord_xml"
        />
    <ImageButton
        android:id="@+id/bord_space_8"
        android:layout_width="85dp"
        android:layout_height="85dp"
        app:layout_constraintTop_toBottomOf="@id/bord_space_5"
        app:layout_constraintStart_toEndOf="@id/bord_space_7"
        app:layout_constraintEnd_toEndOf="parent"
        android:scaleType="fitCenter"
        android:padding="10dp"
        android:src="@android:color/transparent"
        android:background="@drawable/black_bord_xml"
        />

    <ImageButton
        android:id="@+id/first_small_player_2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toBottomOf="@id/bord_space_8"
        app:layout_constraintEnd_toStartOf="@id/first_medium_player_2"
        android:src="@drawable/icon_squirtle"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        />
    <ImageButton
        android:id="@+id/second_small_player_2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@id/first_small_player_2"
        app:layout_constraintEnd_toStartOf="@id/second_medium_player_2"
        android:src="@drawable/icon_squirtle"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        />
    <ImageButton
        android:id="@+id/third_small_player_2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@id/second_small_player_2"
        app:layout_constraintEnd_toStartOf="@id/third_medium_player_2"
        android:src="@drawable/icon_squirtle"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        />
    <ImageButton
        android:id="@+id/first_medium_player_2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toBottomOf="@id/bord_space_8"
        app:layout_constraintEnd_toStartOf="@id/first_big_player_2"
        android:src="@drawable/icon_wartortle"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        />
    <ImageButton
        android:id="@+id/second_medium_player_2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@id/first_medium_player_2"
        app:layout_constraintEnd_toStartOf="@id/second_big_player_2"
        android:src="@drawable/icon_wartortle"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        />
    <ImageButton
        android:id="@+id/third_medium_player_2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@id/second_medium_player_2"
        app:layout_constraintEnd_toStartOf="@id/third_big_player_2"
        android:src="@drawable/icon_wartortle"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        />
    <ImageButton
        android:id="@+id/first_big_player_2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toBottomOf="@id/bord_space_8"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/icon_blastoise"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        />
    <ImageButton
        android:id="@+id/second_big_player_2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@id/first_big_player_2"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/icon_blastoise"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        />
    <ImageButton
        android:id="@+id/third_big_player_2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@id/second_big_player_2"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/icon_blastoise"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        />
    <ImageButton
        android:id="@+id/music_button"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/ic_unmuted"
        android:background="@drawable/image_button_border"
        android:scaleType="fitCenter"
        android:padding="1dp"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="30dp"
        />
    <TextView
        android:id="@+id/version_app"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Versão 1.0.0"
        android:textStyle="bold"
        android:textSize="10dp"
        android:layout_marginStart="11dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintTop_toBottomOf="@+id/music_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <RelativeLayout
        android:id="@+id/wins_view"
        android:layout_width="390dp"
        android:layout_height="500dp"
        android:background="@drawable/credits_background"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        >


        <TextView
            android:id="@+id/wins_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fim De Jogo"
            android:textSize="20sp"
            android:textColor="@android:color/white"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:fontFamily="@font/consola"
            />

        <TextView
            android:id="@+id/credits_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:text="Parabéns!!!"
            android:textColor="@android:color/white"
            android:layout_below="@id/wins_title"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/consola"/>
        <TextView
            android:id="@+id/credits_message_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:text="O jogador 1 venceu!"
            android:textColor="@android:color/white"
            android:layout_below="@id/credits_message"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/consola"/>

        <ImageView
            android:id="@+id/icon_trophy"
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:layout_marginTop="10dp"
            android:layout_below="@id/credits_message_2"
            android:layout_centerHorizontal="true"
            android:src="@drawable/icon_trophy"
            />

        <TextView
            android:id="@+id/credits_message_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:text="Obrigado por Jogar"
            android:textColor="@android:color/white"
            android:layout_below="@id/icon_trophy"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/consola"/>

        <ImageButton
            android:id="@+id/restart_game"
            android:layout_width="140dp"
            android:layout_height="40dp"
            android:layout_below="@id/credits_message_3"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:src="@drawable/return_main_activity_btn_foreground"
            android:background="@drawable/inicar_btn_background"
            />

        <ImageButton
            android:id="@+id/return_main_activity"
            android:layout_width="140dp"
            android:layout_height="40dp"
            android:layout_below="@id/restart_game"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:src="@drawable/new_game_btn_foreground"
            android:background="@drawable/inicar_btn_background"
            />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/intructions_view"
        android:layout_width="390dp"
        android:layout_height="450dp"
        android:background="@drawable/credits_background"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        >


        <TextView
            android:id="@+id/intructions_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Como Jogar:"
            android:textSize="20sp"
            android:textColor="@android:color/white"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:fontFamily="@font/consola"
            />

        <TextView
            android:id="@+id/intructions_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:text="Objetivo do Jogo:\n
\n--> Alinhar 3 peças de sua cor (na horizontal, vertical ou diagonal) para VENCER!."
            android:textColor="@android:color/white"
            android:layout_below="@id/intructions_title"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/consola"/>
        <TextView
            android:id="@+id/intructions_message_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:text="Como Jogar:\n
\n--> O jogo é alternado entre dois jogadores.\n
\n--> Escolha a peça que você deseja jogar (pequena, média ou grande) e toque no espaço do tabuleiro onde deseja posicionar a peça.\n
\n--> Você pode colocar uma peça em uma célula vazia ou sobrepor outra peça menor.\n
\n--> Não é permitido colocar uma peça de menor evolução em cima de uma maior evolução."
            android:textColor="@android:color/white"
            android:layout_below="@id/intructions_message"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/consola"/>


        <ImageButton
            android:id="@+id/return_game_button"
            android:layout_width="140dp"
            android:layout_height="40dp"
            android:layout_below="@id/intructions_message_2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:src="@drawable/return_game_activity_button_btn_foreground"
            android:background="@drawable/inicar_btn_background"
            />
    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>